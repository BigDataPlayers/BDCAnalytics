<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.BDCAnalytics"
          android:versionCode="4"
          android:versionName="1.4">

    <uses-sdk android:minSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:icon="@drawable/unimobi_48"
            android:label="@string/app_name">
        <activity
                android:name="com.bdc.analytics.androidClient.MyActivity"
                android:label="UniMoBI - Universal Mobile BI">
            <uses-permission
                    android:name="android.permission.INTERNET"
                    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        </activity>
        <activity
                android:name="com.bdc.analytics.androidClient.SplashScreen"
                android:label="UniMobi - Universal Mobile BI"
                android:theme="@style/Theme.Splash"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Login"
                android:label="Sign On"
                android:noHistory="true"/>
        <!-- <activity analytics:name=".ImageMenu" analytics:label="Image Menu"/> -->
        <activity
                android:name="com.bdc.analytics.androidClient.MapActivity"
                android:label="US Heatmap"/>
        <uses-permission android:name="android.permission.INTERNET"/>
    </application>

</manifest>
